<!DOCTYPE html>
<html>

<head>
    <title>Search Results</title>
    <link href='https://fonts.googleapis.com/css?family=Kaushan Script' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="results.css">
</head>

<body>
    <h1>Flight Results</h1>
    <div class="container">
        <% flights.forEach(function(f){ %>
        <div class="listitem">
            <img class="airlinelogo" src="<%= f.logo %>">
            <div class="flightdetailsbox">
                <h4 class="airlinename"><%= f.airline_name + " - " + f.flight_no%></h4>
                <p class="flightdetails"><span id="fromtime"><b><%= f.departure_time.substring(0,5) %></b> </span><span id="from"><%= f.from_code %></span> <b
                        style="font-size: 1.7rem">&#8658</b> <span id="fromtime"><b><%= f.arrival_time.substring(0,5) %></b> <span id="to"><%= f.to_code %></span>
                </p>
            </div>
            <div class="rightsection">
                <h3 class="cost">â‚¹ <%= f.price %></h3>
                <button class="book"><a href="/book/<%= f.flight_no %>" class="booktext">Book Now</a></button></a>
            </div>
        </div>
        <% }); %>
    </div>
</body>

</html>